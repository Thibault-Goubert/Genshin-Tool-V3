{
  "name": "hyvtool",
  "version": "3.0.14",
  "description": "Outil de gestion pour Hoyoverse",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "start": "ng build --base-href ./ && electron .",
    "publish:dev": "ng build --base-href ./ && electron-builder --win -p never",
    "publish:prod": "ng build --base-href ./ && electron-builder --win -p always"
  },
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/cdk": "^15.2.9",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/forms": "^15.2.0",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "@ng-bootstrap/ng-bootstrap": "^14.0.1",
    "@types/node": "^20.2.5",
    "dialog": "^0.3.1",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "material": "^0.5.3",
    "ng": "^0.0.0",
    "request": "^2.88.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.1",
    "@angular/cli": "~15.2.1",
    "@angular/compiler-cli": "^15.2.0",
    "@types/jasmine": "~4.3.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.1",
    "electron-wix-msi": "^5.0.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thibault-Goubert/Genshin-Tool-V3.git"
  },
  "author": "ThibaultGoubert",
  "private": true,
  "build": {
    "productName": "HYVTool",
    "appId": "HYVTool",
    "files": [
      "dist/",
      "node_modules/",
      "src/",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Thibault-Goubert",
        "repo": "Genshin-Tool-V3",
        "private": false
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
